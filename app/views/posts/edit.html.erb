<h1> Post editieren </h1>

<%= form_for(@post) do |f| %>
  <% unless @post.errors.empty? %>
  <ul>
    <% @post.errors.messages.each do |error|%>
      <li><% error %></li>
    <% end %>
  </ul>
  <% end %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
    <div>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>